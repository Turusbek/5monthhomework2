<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.a5monthhomework2.fragment.MainFragment"
        android:label="fragment_mainragment"
        tools:layout="@layout/fragment_mainragment" >
        <action
            android:id="@+id/action_mainFragment_to_secondFragment"
            app:destination="@id/secondFragment" />
    </fragment>


    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.a5monthhomework2.fragment.SecondFragment"
        android:label="fragment_second"
        tools:layout="@layout/fragment_second" >
        <argument
            app:argType="string"
            android:name="et_you" />
        <argument
            app:argType="string"
            android:name="et_me"/>
        <argument
            app:argType="string"
            android:name="percentage"/>

    </fragment>
</navigation>